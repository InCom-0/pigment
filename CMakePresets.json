{
    "version": 8,
    "configurePresets": [
        {
            "name": "MSYS2_ucrt_gcc_Debug",
            "hidden": false,
            "inherits": [
                "_common",
                "_gcc",
                "_debug",
                "MSYS_ucrt_PATH"
            ],
            "vendor": {
                "visualStudio": {
                    "cmake.debugConfig": {
                        "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe"
                    }
                }
            }
        },
        {
            "name": "MSYS2_ucrt_gcc_Release",
            "hidden": false,
            "inherits": [
                "_common",
                "_gcc",
                "_release",
                "MSYS_ucrt_PATH"
            ],
            "vendor": {
                "visualStudio": {
                    "cmake.debugConfig": {
                        "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe"
                    }
                }
            }
        },
        {
            "name": "MSVC_Debug",
            "hidden": false,
            "inherits": [
                "_common",
                "_MSVC",
                "_debug"
            ]
        },
        {
            "name": "MSVC_Release",
            "hidden": false,
            "inherits": [
                "_common",
                "_MSVC",
                "_release"
            ]
        },
        {
            "name": "MSVC_Release_TRACY",
            "hidden": false,
            "inherits": [
                "MSVC_Release"
            ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-DTRACY_ENABLE -DTRACY_NO_EXIT"
            }
        },
        {
            "name": "gcc_Debug",
            "hidden": false,
            "inherits": [
                "_common",
                "_gcc",
                "_debug"
            ]
        },
        {
            "name": "gcc_Release",
            "hidden": false,
            "inherits": [
                "_common",
                "_gcc",
                "_release"
            ]
        },
        {
            "name": "clang_Debug",
            "hidden": false,
            "inherits": [
                "_common",
                "_clang",
                "_debug"
            ]
        },
        {
            "name": "clang_Release",
            "hidden": false,
            "inherits": [
                "_common",
                "_clang",
                "_release"
            ]
        },
        {
            "name": "_common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "_release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "_debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "_gcc",
            "hidden": true,
            "description": "Using: C = gcc.exe, CXX = g++.exe",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "_clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "_MSVC",
            "hidden": true,
            "toolchainFile": "cmake/toolchain/Windows.MSVC.toolchain.cmake"
        },
        {
            "name": "MSYS_ucrt_PATH",
            "hidden": true,
            "environment": {
                "PATH": "C:/msys64/ucrt64/bin;$penv{PATH}"
            }
        }
    ]
}